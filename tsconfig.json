{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@next/*": ["apps/nextjs/src/*"],
      "@expo/*": ["apps/expo/*"],
      "@landing-page/*": ["apps/landing-site/*"],
      "@packages/*": ["packages/*"]
    },
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    //"strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noUncheckedIndexedAccess": true
  },
  "include": [".eslintrc.cjs"]
}
